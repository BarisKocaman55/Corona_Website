@using Corono_Website.Models
@model IEnumerable<CoronaTable>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CoronaTableList</title>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/myCss.css" rel="stylesheet" />

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12" id="title">
                <h2 class="h2_title">Korono Virüs Takip Sitesi</h2>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
    <div class="container" style="margin-top: 20px; background-color: white;">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Tarih</th>
                    <th scope="col">Test Sayısı</th>
                    <th scope="col">Vaka Sayısı</th>
                    <th scope="col">Hasta Sayısı</th>
                    <th scope="col">Vefat Sayısı</th>
                    <th scope="col">İyileşen Hasta Sayısı</th>
                    <th scope="col">Ağır Hasta Sayısı</th>
                    <th scope="col">Toplam Test Sayısı</th>
                    <th scope="col">Toplam Vaka Sayısı</th>
                    <th scope="col">Toplam Vefat Sayısı</th>
                    <th scope="col">Toplam İyileşen Hasta Sayısı</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td>@data.Date</td>
                        <td>@data.NumOfTest</td>
                        <td>@data.TotalCase</td>
                        <td>@data.NumOfPatients</td>
                        <td>@data.NumOfDeaths</td>
                        <td>@data.NumOfHealed</td>
                        <td>@data.NumOfIntensiveCare</td>
                        <td>@data.TotalTest</td>
                        <td>@data.TotalCase</td>
                        <td>@data.TotalDeaths</td>
                        <td>@data.TotalHealed</td>
                        <td>@Html.ActionLink("Güncelle", "CoronaTableUpdate", "Admin", new { id = data.Id }, new { @class = "btn btn-warning" })</td>
                        <td>@Html.ActionLink("Sil", "CoronaTableDelete", "Admin", new { id = data.Id }, new { @class = "btn btn-danger" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    }
    
</body>
</html>
