@using Corono_Website.Models
@model Admins

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LoginPage</title>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/myCss.css" rel="stylesheet" />

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12" id="title">
                <h2 class="h2_title">Korono Virüs Takip Sitesi</h2>
            </div>
        </div>

        <div class="row justify-content-md-center" style="margin-top: 40px;">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h2 style="text-align: center; ">Admin Login</h2>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("AdminLogin", "Admin", new { user = 12345 }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group" style="margin-top: 15px;">
                                @Html.LabelFor(m => m.Username)
                                @Html.TextBoxFor(m => m.Username, "", new { @class = "form-control", @placeholder = "Username" })

                            </div>
                            <div class="form-group" style="margin-top: 15px;">
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            </div>

                            <div class="form-group" style="margin-top: 20px;">
                                <input type="submit" name="submit" class="btn btn-primary" value="Login" style="margin-left: 40%; width: 80px; height: 30px;" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
</html>