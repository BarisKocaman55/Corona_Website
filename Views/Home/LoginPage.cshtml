@using Corono_Website.Models
@model User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LoginPage</title>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" rel="stylesheet" />


    <style>
        body {
            background: linear-gradient(to right, #00AAFF, #00FF6C);
        }

        #title {
            height: 80px;
            background-color: #e6e6ff;
            text-align: center;
            border-radius: 15px;
        }

        .h2_title {
            padding-top: 20px;
            font-family: "Times New Roman";
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12" id="title">
                <h2 class="h2_title">Korono Virüs Takip Sitesi</h2>
            </div>
        </div>

        <div class="row justify-content-md-center"  style="margin-top: 40px;">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h2 style="text-align: center; ">Login</h2>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("LoginPage", "Home", new { user = 12345 }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group" style="margin-top: 15px;">
                                @Html.LabelFor(m => m.Username)
                                @Html.TextBoxFor(m => m.Username, "", new { @class = "form-control", @placeholder = "Username" })

                            </div>
                            <div class="form-group" style="margin-top: 15px;">
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            </div>
                            <div class="form-group"  style="margin-top: 20px;">
                                <input type="submit" name="submit" class="btn btn-primary" value="Login" style="margin-left: 40%; width: 80px; height: 30px;"/>
                            </div>

                            <div class="form-group" style="margin-left: 43%;">
                                <a class="btn btn-info btn-group-lg" href="/Admin/AdminRegister">Register</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
</html>